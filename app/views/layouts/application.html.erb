          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> %>
        <%= form_with(url: shows_path, method: "get") do %>
          <%= label_tag(:q, "Search for:") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
        <% end %>
      </div>
</nav>

    <%= yield %>
  </body>
</html>
